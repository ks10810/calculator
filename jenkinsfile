pipeline {
     agent any
     triggers {
          pollSCM('* * * * *')
     }
     stages {
          stage("Compile") {
               steps {
                    sh "./mvnw compile"
               }
          }
          stage("Unit Test") {
               steps {
                    sh "./mvnw test"
               }
          }
          stage("Code coverage") {
               steps {
                    sh "./mvnw jacoco:report"
                    publishHTML (target: [
                         allowMissing: false,
                         alwaysLinkToLastBuild: false,
                         keepAll: true,
                         reportDir: 'target/jacoco-report',
                         reportFiles: 'index.html',
                         reportName: "JaCoCo Report"
                    ])
                    sh "./mvnw jacoco:check"
               }
          }
          stage("Docker build") {
               steps {
                    sh "docker build -t srpmic/calculator ."
               }
          }
     }
}
