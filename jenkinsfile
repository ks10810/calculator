pipeline {
     agent any
     stages {
          stage("Compile") {
               steps {
                    sh "./mvnw compile"
               }
          }
          stage("Unit Test") {
               steps {
                    sh "./mvnw test"
               }
          }
          stage("Code coverage") {
               steps {
                    sh "./mvnw jacoco:report"
                    publishHTML (target: [
                         reportDir: 'build/reports/jacoco/test/html',
                         reportFiles: 'index.html',
                         reportName: "JaCoCo Report"
                    ])
                    sh "./mvnw jacoco:check"
               }
          }
     }
}