pipeline {
     agent any
     stages {
          stage("Compile") {
               steps {
                    sh "./mvnw compile"
               }
          }
          stage("Unit Test") {
               steps {
                    sh "./mvnw test"
               }
          }
          stage("Code coverage") {
               steps {
                    sh "./mvnw jacoco:report"
                    publishHTML (target: [
                         allowMissing: false,
                         alwaysLinkToLastBuild: false,
                         keepAll: true,
                         reportDir: 'builds/htmlreports/JaCoCo_20Report',
                         reportFiles: 'index.html',
                         reportName: "JaCoCo Report"
                    ])
                    sh "./mvnw jacoco:check"
               }
          }
     }
}
